import { AboutPopup } from "index.slint";
import { Configuration } from "../configuration.slint";

export component MainMenuBar inherits Window {
  callback open_github(string);

  about_popup := AboutPopup { y: 100px; }

  MenuBar {
    Menu {
      title: @tr("Help");
      
      MenuItem {
        title: @tr("About");
        activated => { about_popup.show(); }
      }

      //MenuSeparator {}
      
      MenuItem {
        title: @tr("GitHub");
        activated => { root.open_github(Configuration.github_url); }
      }
    }
  }
}