import { Configuration } from "../configuration.slint";
import { AboutPopup } from "about_popup.slint";
import { GitHubDialogue } from "github_dialogue.slint";

export component MainMenuBar inherits Window {
  about_popup := AboutPopup { y: 100px; }

  github_dialogue := GitHubDialogue {
    y: 100px;
  }

  MenuBar {
    Menu {
      title: @tr("Help");
      
      MenuItem {
        title: @tr("About");
        activated => { about_popup.show(); }
      }

      //MenuSeparator {}
      
      MenuItem {
        title: @tr("GitHub");
        activated => { github_dialogue.show(); }
      }
    }
  }
}